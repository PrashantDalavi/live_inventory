.content-wrapper
  %section.main_content
    %section.wrapper
      .button_pane.mbot_10.cf
        %a.btn.btn_green.right.mright_10{:href => products_path}
          %i.fa.fa-plus
          Back
        %a.btn.btn_green.right.mright_10{:href => '/testing.xls'}
          %i.fa.fa-plus
          Sample Xl Download

  %section.content
    = form_tag(import_path, :multipart => true,:id => 'uploadForm') do  
      .panel_body
        %fieldset
          %legend 
          .horizontal_form.form_content
            .form_group.cf.mbot_20
              %label.field_label File:
              .field
                = file_field_tag :file, :class => "upload" , :id => "uploadBtn"
            %br
            .form_group.cf.mbot_20
              = submit_tag "Upload", :class => "btn btn_skyblue btn_small"

        - if @errors.present?
          %h2.uploadError ERRORS
          - @errors.each do |error|
            %p.uploadError{:style => "color:red;"}
              = error  
        
        - if session[:pnotification].present?
          %h2.flash_message
            = session[:pnotification]
          - session.delete(:pnotification)  
:css
  #status{margin-top:8px;}
  #import_import_file{margin:15px 0;}
  .btn_skyblue{margin-left:21%;}
  .uploadError{margin-left:21% !important;}